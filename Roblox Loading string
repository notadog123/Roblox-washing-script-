
local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()


local Window = OrionLib:MakeWindow({Name = "Player Controls", HidePremium = false, SaveConfig = true, ConfigFolder = "PlayerControls"})


local ScriptsTab = Window:MakeTab({Name = "Scripts"})


local ControlsTab = Window:MakeTab({Name = "Controls"})


ControlsTab:AddSlider({
    Name = "Jump Power",
    Min = 50,
    Max = 200,
    Default = 100,
    Color = Color3.fromRGB(255,255,255),
    Increment = 1,
    Callback = function(Value)
        local player = game.Players.LocalPlayer
        if player and player.Character and player.Character:FindFirstChild("Humanoid") then
            player.Character.Humanoid.JumpPower = Value
        end
    end    
})


ControlsTab:AddSlider({
    Name = "Walk Speed",
    Min = 16, 
    Max = 100,
    Default = 16,
    Color = Color3.fromRGB(255,255,255),
    Increment = 1,
    Callback = function(Value)
        local player = game.Players.LocalPlayer
        if player and player.Character and player.Character:FindFirstChild("Humanoid") then
            player.Character.Humanoid.WalkSpeed = Value
        end
    end    
})


ScriptsTab:AddButton({
    Name = "Game UI/Frame Viewer",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/yofriendfromschool1/Sky-Hub-Backup/main/gameuigiver.lua"))()
    end    
})

ScriptsTab:AddButton({
    Name = "Game Tool Giver",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/yofriendfromschool1/Sky-Hub-Backup/main/gametoolgiver.lua"))()
    end    
})

ScriptsTab:AddButton({
    Name = "Infinitely Yield",
    Callback = function()
        loadstring(game:HttpGet('https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source'))()
    end  
})


OrionLib:Init()
